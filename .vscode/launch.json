{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "create-patch",
      "type": "cppdbg",
      "windows": {
        "type": "cppvsdbg"
      },
      "request": "launch",  
      "program": "${workspaceFolder}/zig-out/bin/wharf-zig.exe",
      "args": ["create", "--source_folder", "${input:selectFolder}"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/zig-out/bin/",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "build",
    },
    {
      "name": "make-signature",
      "type": "cppdbg",
      "windows": {
        "type": "cppvsdbg"
      },
      "request": "launch",
      "program": "${workspaceFolder}/zig-out/bin/wharf-zig.exe",
      "args": ["make_signature", "--source_folder", "E:/JourneeDevelopment/Windows", "--output_file", "E:/JourneeDevelopment/Signature"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/zig-out/bin/",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "build",
    },
    {
      "name": "apply-patch",
      "type": "cppdbg",
      "windows": {
        "type": "cppvsdbg"
      },
      "request": "launch",
      "program": "${workspaceFolder}/zig-out/bin/wharf-zig.exe",
      "args": ["apply", "--patch", "${workspaceFolder}/zig-out/bin/Patch.pwd", "--target_folder", "${workspaceFolder}/zig-out/bin/PatchedBuild"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/zig-out/bin/",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "build",
    },
    {
      "name": "run tests",
      "type": "cppdbg",
      "windows": {
        "type": "cppvsdbg"
      },
      "request": "launch",
      "program": "${workspaceFolder}/zig-out/bin/test.exe",
      "args": [
        "zig"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "build tests",
    },
    {
      // Suboptimal! Doesn't use build.zig!
      "name": "tests - current file",
      "type": "cppdbg",
      "windows": {
        "type": "cppvsdbg"
      },
      "request": "launch",
      "program": "${workspaceFolder}/${input:test-bin-single}/test",
      "args": [
        "zig"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
    }
  ],
  "inputs": [
    {
      // Builds a test executable for the currently focused file and returns it's file system path.
      "id": "test-bin-single",
      "type": "command",
      "command": "shellCommand.execute",
      "args": {
        "command": "zig test ${file} --enable-cache --test-no-exec --cache-dir zig-cache -O Debug",
        "cwd": "${workspaceFolder}",
        "useSingleResult": true
      }
    },
    {
      "id": "selectFolder",
      "type": "promptString",
      "description": "Enter a folder path",
    }
  ],
  "options": {
    "cwd": "${workspaceFolder}"
  }
}
