{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "create-patch",
      "type": "cppdbg",
      "windows": {
        "type": "cppvsdbg"
      },
      "request": "launch",
      "program": "${workspaceFolder}/zig-out/bin/zig-patch.exe",
      // "args": ["create", "--source_folder", "${input:selectFolder}"],
      "args": [
        "create",
        "--source_folder",
        "C:/ovbuild/Windows"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/zig-out/bin/",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "build",
    },
    {
      "name": "make-signature",
      "type": "cppdbg",
      "windows": {
        "type": "cppvsdbg"
      },
      "request": "launch",
      "program": "${workspaceFolder}/zig-out/bin/zig-patch.exe",
      "args": [
        "make_signature",
        "--source_folder",
        "D:/Projects/Journee/seat/JourneeBUild3/Windows",
        "--output_file",
        "D:/Projects/Personal/zig-patch/zig-out/bin/Signature"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/zig-out/bin/",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "preLaunchTask": "build",
    },
    {
      "name": "apply-patch",
      "type": "cppdbg",
      "windows": {
        "type": "cppvsdbg"
      },
      "request": "launch",
      "program": "${workspaceFolder}/zig-out/bin/zig-patch.exe",
      "args": [
        "apply",
        "--patch",
        "${workspaceFolder}/zig-out/bin/Patch.pwd",
        "--target_folder",
        "D:/Users/Administrator/Downloads/PatchedFolder/Build"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/zig-out/bin/",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "build",
    },
    {
      "name": "run tests",
      "type": "cppdbg",
      "windows": {
        "type": "cppvsdbg"
      },
      "request": "launch",
      "program": "${workspaceFolder}/zig-out/bin/test.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "build tests",
    },
    {
      // Suboptimal! Doesn't use build.zig!
      "name": "tests - current file",
      "type": "cppdbg",
      "windows": {
        "type": "cppvsdbg"
      },
      "request": "launch",
      "program": "${workspaceFolder}/${input:test-bin-single}/test",
      "args": [
        "zig"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
    }
  ],
  "inputs": [
    {
      // Builds a test executable for the currently focused file and returns it's file system path.
      "id": "test-bin-single",
      "type": "command",
      "command": "shellCommand.execute",
      "args": {
        "command": "zig test ${file} --enable-cache --test-no-exec --cache-dir zig-cache -O Debug",
        "cwd": "${workspaceFolder}",
        "useSingleResult": true
      }
    },
    {
      "id": "selectFolder",
      "type": "promptString",
      "description": "Enter a folder path",
    }
  ],
  "options": {
    "cwd": "${workspaceFolder}"
  }
}
